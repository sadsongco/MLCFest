<section id="params" class="typeContainer">
  <form hx-post="admin/php/addParam.php" target="this" class="newForm" autocomplete="on">
      <label for="festivalStart">
        Festival Doors Open
        <input type="datetime-local" name="festivalStart" id="festivalStart" required="" value="2023-08-30 14:00:00">
      </label>
      <label for="festivalEnd">
        Festival Doors Open
        <input type="datetime-local" name="festivalEnd" id="festivalEnd" required="" value="2023-08-30 23:00:00">
      </label>
      <label for="paramSubmit">
          Update Start Time
          <input id="paramSubmit" type="submit" value="Update">
        </label>
    </form>
</section>

<section id="venues" class="typeContainer">
  <h2 class="containerTitle">Venues</h2>
  <div id="venuesList" class="list" hx-get="admin/php/getVenues.php" hx-trigger="load, newVenue from:body" hx-target="this">
    <img src="/assets/graphics/mlc_icon_small.svg" alt="loading spinner" class="htmx-indicator loading" />
  </div>
  <div id="newVenueForm" hx-get="admin/php/newVenueForm.php" hx-trigger="load, clearVenueForm from:body" hx-target="this">
    <img src="/assets/graphics/mlc_icon_small.svg" alt="loading spinner" class="htmx-indicator loading" />
  </div>
</section>

<section id="artists" class="typeContainer">
  <h2 class="containerTitle">Artists</h2>
  <div id="artistList" class="list" hx-get="admin/php/getArtists.php" hx-trigger="load, newArtist from:body" hx-target="this">
    <img src="/assets/graphics/mlc_icon_small.svg" alt="loading spinner" class="htmx-indicator loading" />
  </div>
  <div id="newArtistForm" hx-get="admin/php/newArtistForm.php" hx-trigger="load, clearArtistForm from:body" hx-target="this">
    <img src="/assets/graphics/mlc_icon_small.svg" alt="loading spinner" class="htmx-indicator loading" />
  </div>
</section>

<section id="shows" class="typeContainer">
  <h2 class="containerTitle">Shows</h2>
  <div id="clashFinder" class="clashFinder" hx-get="admin/php/getShows.php" hx-trigger="load, newShow from:body" hx-target="this">
    <img src="/assets/graphics/mlc_icon_small.svg" alt="loading spinner" class="htmx-indicator loading" />
  </div>
  <div id="newShowForm" hx-get="admin/php/newShowForm.php" hx-trigger="load, clearShowForm from:body, newVenue from:body, newArtist from:body" hx-target="this">
    <img src="/assets/graphics/mlc_icon_small.svg" alt="loading spinner" class="htmx-indicator loading" />
  </div>
</section>
